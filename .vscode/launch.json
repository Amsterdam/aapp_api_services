{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "DEBUG": "true",
                "DJANGO_SETTINGS_MODULE": "city_pass.settings.local",
            },
        },
        {
            "name": "Django: test specific item",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                // "city_pass.tests.test_models",
                // "city_pass.tests.test_authentication",
                // "city_pass.tests.test_models.TestTokenModels.test_refresh_token_is_expired",
                // "city_pass.tests.test_session_views",
                // "city_pass.tests.test_session_views.TestSessionInitView",
                // "city_pass.tests.test_session_views.TestSessionPostCityPassCredentialView",
                // "city_pass.tests.test_session_views.TestSessionRefreshAccessView",
                // "city_pass.tests.test_data_views.TestPassesView",
                "city_pass.tests.test_data_views.TestBudgetTransactionsViews.test_get_budget_transactions_successful",
            ],
            "django": true,
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            },
            "envFile": "${workspaceFolder}/env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DJANGO_SETTINGS_MODULE": "city_pass.settings.local",
                "NO_COVERAGE": "true",
            },
        }
    ]
}
