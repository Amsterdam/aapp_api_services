{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "DEBUG": "true",
                "DJANGO_SETTINGS_MODULE": "construction_work.settings.local",
            },
        },
        {
            "name": "Django: test specific item",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                // "city_pass.tests"
                "construction_work.tests.test_authentication.TestEntraIDAuthentication.test_publisher_cannot_access_editor_view"
                // "contact.tests"
            ],
            "django": true,
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            },
            "envFile": "${workspaceFolder}/env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DJANGO_SETTINGS_MODULE": "construction_work.settings.local",
                "NO_COVERAGE": "true",
            },
        }
    ]
}
